{
  "name": "braindrop",
  "description": "A free, open source app for learning new topics.",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "docs": "doctoc --title '**Table of contents**' README.md",
    "dev": "lerna run dev --parallel",
    "clean": "lerna run clean",
    "build": "lerna run build",
    "pub": "lerna publish",
    "test": "lerna run test -- --passWithNoTests",
    "lint": "eslint --ext js,ts,tsx .",
    "reset": "find . -type dir -name node_modules | xargs rm -rf && rm -rf yarn.lock",
    "storybook": "yarn workspace @braindrop/storybook start",
    "storybook:build": "yarn workspace @braindrop/storybook build"
  },
  "dependencies": {},
  "devDependencies": {
    "@jest/types": "^27.1.1",
    "@nighttrax/eslint-config-tsx": "~8.0.5",
    "@types/node": "^16.10.2",
    "doctoc": "~2.0.1",
    "eslint": "~7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "~2.24.2",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.4",
    "lerna": "~4.0.0",
    "prettier": "~2.4.0",
    "react": "17.0.2",
    "react-test-renderer": "17.0.2",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "~4.4.3"
  }
}
