{
  "name": "minddrop",
  "description": "A visual workspace to organise your projects, studies, research, and ideas.",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "apps/*"
    ],
    "nohoist": [
      "react-static-plugin-source-filesystem",
      "react-static-plugin-source-filesystem/**"
    ]
  },
  "scripts": {
    "docs": "doctoc --title '**Table of contents**' README.md",
    "dev": "lerna run dev --parallel",
    "clean": "lerna run clean",
    "build:packages": "lerna run build --no-private",
    "build:docs": "yarn workspace @minddrop/docs build",
    "build:website": "yarn workspace @minddrop/utils build && yarn workspace @minddrop/i18n build && yarn workspace @minddrop/icons build &&   yarn workspace @minddrop/theme build && yarn workspace @minddrop/ui build && yarn workspace @minddrop/website build",
    "pub": "lerna publish --no-private",
    "test": "lerna run test -- --passWithNoTests",
    "test:watch": "lerna run test --parallel -- --passWithNoTests --watch",
    "lint": "eslint --ext js,ts,tsx .",
    "reset": "find . -type dir -name node_modules | xargs rm -rf && rm -rf yarn.lock",
    "storybook": "yarn workspace @minddrop/storybook start",
    "storybook:build": "yarn workspace @minddrop/storybook build"
  },
  "devDependencies": {
    "@nighttrax/eslint-config-tsx": "~9.0.0",
    "doctoc": "~2.1.0",
    "eslint": "~8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "~2.25.2",
    "eslint-plugin-prettier": "^4.0.0",
    "lerna": "~4.0.0",
    "prettier": "~2.4.0",
    "typescript": "~4.4.4"
  }
}
